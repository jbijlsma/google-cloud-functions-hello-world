{
  "name": "pnpm-webpack-ts-hello-function",
  "version": "1.0.0",
  "description": "",
  "main": "./dist/index.js",
  "watch": {
    "serve": "dist/*.js"
  },
  "scripts": {
    "build": "webpack",
    "watch": "npm-watch",
    "start": "concurrently \"npm run watch\" \"webpack --watch\"",
    "serve": "npx @google-cloud/functions-framework --target=hello --port=8082",
    "publish": "npm run build && cp ./dist/index.js ./publish && cp ./static/* ./publish",
    "deploy": "npm run publish && ../../scripts/gcloud-deploy.sh hello-pnpm-webpack-ts ./publish",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "uninstall": "rm -rf dist node_modules"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/appzuka/project-references-demo.git"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.1"
  },
  "devDependencies": {
    "@myscope/messages-package": "workspace:*",
    "@google-cloud/functions-framework": "^3.1.2",
    "concurrently": "^7.4.0",
    "npm-watch": "^0.11.0",
    "@types/node": "^18.8.0",
    "@types/express": "^4.17.14",
    "@types/express-serve-static-core": "^4.17.31",
    "typescript": "^4.8.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.11.1",
    "webpack-node-externals": "^3.0.0",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "fork-ts-checker-webpack-plugin": "^7.2.13",
    "ts-loader": "^9.4.1"
  }
}
